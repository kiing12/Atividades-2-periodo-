-- Codigo Style CSS -- 

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #ffffff;
    color: #131212;
  }
  
  h1, h2, h3 {
    color: #1d70c3;
  }
  
  h1 {
    margin-bottom: 5px;
  }
  
  img {
    border-radius: 50%;
    margin-top: 10px;
  }
  
  hr {
    border: 0;
    border-top
      }
  
  a {
    color: #005ab4;
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  dl, ul {
    margin: 0 0 20px 20px;
  }
  

  iframe {
    max-width: 100%;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }
  
  center {
    margin-bottom: 20px;
  }
  
  li {
    margin-bottom: 10px;
  }
  
  dd {
    margin-left: 20px;
    margin-bottom: 10px;
  }
  
